{{#cardstack-session as |session|}}
  {{#if session.isAuthenticated }}
    <button {{action session.logout}}>Logout {{session.user.name}}</button>
  {{else}}
    {{#drupal-login source="contenta" as |login|}}
      <button {{action login}}>Login</button>
    {{/drupal-login}}
  {{/if}}
{{/cardstack-session}}
{{outlet}}